<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.PontoRegistro">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Analista em Desenvolvimento de Software"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintVertical_bias="0.189" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setor"
        app:cardCornerRadius="50dp"
        android:elevation="0dp">

        <ImageView
            android:id="@+id/photoUrl"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ninja"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setor" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="ERIK ELLY DE OLIVEIRA MENDES"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.292" />

    <TextView
        android:id="@+id/dataCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="04/08/2021"
        android:textColor="#0060B1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/hoursCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="12:31:23"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dataCounter"
        android:textColor="#0060B1"/>

    <TextView
        android:id="@+id/registrePonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Registre seu ponto, Ninja!"
        android:textColor="#FF6500"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hoursCounter" />

    <ImageButton
        android:id="@+id/registrarPonto"
        android:layout_width="128dp"
        android:layout_height="117dp"
        android:layout_marginTop="24dp"
        android:background="#0003DAC5"
        android:importantForAccessibility="no"
        android:src="@drawable/digital"
        app:layout_constraintEnd_toEndOf="@id/registrePonto"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@id/registrePonto"
        app:layout_constraintTop_toBottomOf="@id/registrePonto" />

    <TextView
        android:id="@+id/registros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Registros de hoje"
        android:textColor="#0060B1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registrarPonto" />

    <TextView
        android:id="@+id/registroEntrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrada"
        app:layout_constraintTop_toBottomOf="@id/registros"
        app:layout_constraintStart_toStartOf="@id/registros"
        android:layout_marginTop="20dp"
        android:textColor="#FF6500"/>

    <TextView
        android:id="@+id/entradaAlmoco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrada Almoço"
        app:layout_constraintTop_toBottomOf="@id/registroEntrada"
        app:layout_constraintStart_toStartOf="@id/registroEntrada"
        android:layout_marginTop="10dp"
        android:textColor="#FF6500"/>

    <TextView
        android:id="@+id/voltaAlmoco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volta Almoço"
        app:layout_constraintTop_toBottomOf="@id/entradaAlmoco"
        app:layout_constraintStart_toStartOf="@id/entradaAlmoco"
        android:layout_marginTop="10dp"
        android:textColor="#FF6500"/>

    <TextView
        android:id="@+id/saida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saída"
        app:layout_constraintTop_toBottomOf="@id/voltaAlmoco"
        app:layout_constraintStart_toStartOf="@id/voltaAlmoco"
        android:layout_marginTop="10dp"
        android:textColor="#FF6500"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0060B1"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>